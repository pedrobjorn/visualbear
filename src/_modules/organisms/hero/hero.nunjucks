{% macro content(spec) %}
{% set spec = spec or {} %}
{% set _class = spec.class or '' %}
{% set _content = spec.content or '' %}
<div class="hero {{_class}}">
	<div class="content">
		<div class="jumbo-text">
			<a href="#work" alt="Title link work">
				{{_content.title}}
			</a>
			<p><a href="./about" alt="Title link work">
				{{_content.body}}
			</a>
		</p>
	</div>
</div>
</div>
{% endmacro %}